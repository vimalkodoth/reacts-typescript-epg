{
    "name": "reactjs-typescript-webpack5-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "index.tsx",
    "scripts": {
        "dev": "webpack serve --config webpack/webpack.config.js --env env=dev",
        "prod": "webpack -- --config webpack/webpack.config.js --env env=prod",
        "lint": "eslint --fix \"./{src,tests}/**/*.{js,jsx,ts,tsx,json}\"",
        "format": "prettier --write \"./{src,tests}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
        "prod:analyze": "yarn prod --env presets=analyze",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/plugin-transform-runtime": "^7.16.4",
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-react": "^7.16.0",
        "@babel/preset-typescript": "^7.16.0",
        "@emotion/eslint-plugin": "^11.7.0",
        "@emotion/react": "^11.7.0",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.2",
        "@types/enzyme": "^3.10.10",
        "@types/jest": "^27.0.3",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
        "babel-loader": "^8.2.3",
        "copy-webpack-plugin": "^10.0.0",
        "css-loader": "^6.5.1",
        "enzyme": "^3.11.0",
        "eslint": "^8.3.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-react-hooks": "^4.3.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "4",
        "jest": "^27.3.1",
        "jest-serializer-html": "^7.1.0",
        "lint-staged": "^12.1.2",
        "prettier": "^2.5.0",
        "redux-thunk": "^2.4.0",
        "style-loader": "^3.3.1",
        "typescript": "^4.5.2",
        "webpack": "^5.64.4",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.6.0",
        "webpack-merge": "^5.8.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "{src,tests}/**/*.{js,jsx,ts,tsx,json}": [
            "eslint --fix"
        ],
        "{src,tests}/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "volta": {
        "node": "16.13.0",
        "yarn": "1.22.17"
    }
}
